---
import '$styles/global.scss';
import type {AstroBuiltinAttributes} from 'astro';

export interface Props {
	title: string;
  bodyClass?: AstroBuiltinAttributes['class:list'];
}

const { title, bodyClass } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href={`${import.meta.env.BASE_URL}favicon.ico`} />
		<title>{title}</title>
	</head>
	<body class:list={bodyClass}>
		<slot />
	</body>
</html>

<style>
  body.winter {
    background-image: linear-gradient(to bottom, #edccb5, #a3837b, #534856 );
  }

  body.spring {
    background-image: linear-gradient(to bottom, #b0d8e5, #caba7c, #b78d2e );
  }

  body.summer {
    background-image: linear-gradient(to bottom, #c8eaf7, #304e3f, #646c2f, #b28500);
  }
</style>
